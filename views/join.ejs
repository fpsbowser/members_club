<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title><%= title %></title>
    <link rel='stylesheet' href='../stylesheets/style.css' />
  </head>
  <header class="nav-header-container"><%- include('partials/header')%></header>
  <body>
    <h1>Join the Club!</h1>
    <% if (currentUser) { %>
      <% if (!currentUser.ismember) { %>
       <p>In order to see the owner of messages and creation date you must be in the club.</p>
      <form action="" method="POST">
        <label for="passcode">Enter the Club passcode</label>
        <input type="text" name="passcode" placeholder="super secret passcode"/>
        <button>Join</button>
      </form>
      <% } else { %>
       <h2>You are already in the club! You can see message owners and creation dates.</h2>
        <% } %> 
      <% if (!currentUser.isadmin) { %>
       <p>In order to delete messages you must be and Admin.</p>
       <form action="/admin" method="POST">
          <label for="admin-passcode">Enter the Admin passcode</label>
          <input type="text" name="admin-passcode" placeholder="super secret passcode"/>
          <button>Submit</button>
      </form>
      <% } else { %>
          <h2>You already have Admin privilege!</h2>
        <% } %> 
    <% } else { %>
      <h1>Please login before attempting to join the club or gain admin privileges!</h1>
      <% } %> 
    <% if (locals.errors) { %>
    <ul>
      <% errors.forEach(error => { %>
      <li><%- error.msg %></li>
      <% }) %>
    </ul>
    <% } %>
  </body>
</html>
